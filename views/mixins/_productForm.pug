mixin productForm(product = {})

    form(action=`/add/${product._id || ''}` method="POST" enctype="multipart/form-data")
        .mb-3
            label(for="name" class="form-label") Nom
            input(class="form-control" type="text" id="name" name="name" value=product.name required)

        .mb-3
            label(for="description" class="form-label") Descripci√≥
            textarea(class="form-control" id="description" name="description")= product.description
        
        .mb-3
            label(for="photo" class="form-label") Foto
            input(class="form-control" type="file" name="photo"
            id="photo" accept="image/gif, image/webp, image/png, image/jpeg")
            if product.photo
                img(src=`/uploads/${product.photo}` alt=product.name width=200)
            
        .mb-3
            label(for="price" class="form-label") Preu
            input(class="form-control" type="text" id="price"
        name="price" value=product.price required)

        .mb-3
        
        button(type="submit" class="btn btn-primary") Guardar producte